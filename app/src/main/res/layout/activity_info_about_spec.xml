<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InfoAboutSpec">

    <TabHost
        android:id="@+id/BoardTabHost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        tools:context=".InfoAboutSpec">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="861dp"
            android:orientation="vertical">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/employmentTab"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/KoreaEmploymentSiteGo"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:fontFamily="@font/nanumgodic"
                        android:background="@color/hufs" />

                    <TextView
                        android:id="@+id/KoreaEmploymentInfosite"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_gravity="left"
                        android:fontFamily="@font/nanumgodic"
                        android:text=" \n=> 고용에 대한 모든 것! 고용노동부 홈페이지 \n 취업지원부터 고용보호까지 모든 정보 총망라한 고용노동부 사이트" />

                    <Button
                        android:id="@+id/employmentSite1Go"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:fontFamily="@font/nanumgodic"
                        android:background="@color/hufs" />

                    <Button
                        android:id="@+id/employmentSite2Go"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:fontFamily="@font/nanumgodic"
                        android:background="@color/hufs" />

                    <Button
                        android:id="@+id/employmentSite3Go"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:fontFamily="@font/nanumgodic"
                        android:background="@color/hufs" />

                    <TextView
                        android:id="@+id/employmentInfosite"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_gravity="left"
                        android:fontFamily="@font/nanumgodic"
                        android:text=" \n=> 실시간으로 올라오는 취업 및 인턴 공고 사이트" />

                    <Button
                        android:id="@+id/employmentInfoCommunity1Go"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:fontFamily="@font/nanumgodic"
                        android:background="@color/hufs" />

                    <Button
                        android:id="@+id/employmentInfoCommunity2Go"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:fontFamily="@font/nanumgodic"
                        android:background="@color/hufs" />

                    <Button
                        android:id="@+id/employmentInfoCommunity3Go"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:fontFamily="@font/nanumgodic"
                        android:background="@color/hufs" />

                    <TextView
                        android:id="@+id/employmentInfoCommunity"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_gravity="left"
                        android:fontFamily="@font/nanumgodic"
                        android:text=" \n=> 취업 정보 커뮤니티" />



                </LinearLayout>


                <LinearLayout
                    android:id="@+id/specTab"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/specInfoSite1Go"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:fontFamily="@font/nanumgodic"
                        android:background="@color/hufs" />

                    <Button
                        android:id="@+id/specInfoSite2Go"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:fontFamily="@font/nanumgodic"
                        android:background="@color/hufs" />

                    <Button
                        android:id="@+id/specInfoSite4Go"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:fontFamily="@font/nanumgodic"
                        android:background="@color/hufs" />

                    <TextView
                        android:id="@+id/specInfoSite"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_gravity="left"
                        android:fontFamily="@font/nanumgodic"
                        android:text=" \n=> 공모전과 대외활동으로 쌓는 스펙" />



                </LinearLayout>


            </FrameLayout>

        </LinearLayout>
    </TabHost>

</FrameLayout>
