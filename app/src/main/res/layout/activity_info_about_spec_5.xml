<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InfoAboutSpec_5">

    <TabHost
        android:id="@+id/tabhost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".InfoAboutSpec_5"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/tab_job"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/KoreaEmploymentSiteGo"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:text="고용노동부"
                        android:textColor="@color/yellow"
                        app:backgroundTint="@color/hufs"
                        app:background="@drawable/koreaemployment"
                        android:onClick="KoreaEmploymentSite_go"/>
                    <TextView
                        android:id="@+id/KoreaEmploymentInfoSite"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="start"
                        android:fontFamily="@font/nanumgodic"
                        android:text=" => 고용에 대한 모든 것.\n 취업지원부터 고용보호까지 모든 정보 총망라한 고용노동부 사이트"/>

                    <Button
                        android:id="@+id/employmentSite1Go"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:text="saramin"
                        android:textColor="@color/yellow"
                        app:backgroundTint="@color/hufs"
                        app:background="@drawable/saramin"
                        android:onClick="employmentSite1_go"/>
                    <Button
                        android:id="@+id/employmentSite2Go"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:text="jobkorea"
                        android:textColor="@color/yellow"
                        app:backgroundTint="@color/hufs"
                        app:background="@drawable/jobkorea"
                        android:onClick="employmentSite2_go"/>
                    <TextView
                        android:id="@+id/employmentSite"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nanumgodic"
                        android:text=" => 실시간으로 올라오는 각종 취업 공고 사이트"/>

                    <Button
                        android:id="@+id/employmentCommunity1Go"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:text="취업 뽀개기"
                        android:textColor="@color/yellow"
                        app:backgroundTint="@color/hufs"
                        app:background="@drawable/breakjob"
                        android:onClick="employmentCommunity1_go"/>
                    <Button
                        android:id="@+id/employmentCommunity2Go"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:text="specup"
                        android:textColor="@color/yellow"
                        app:backgroundTint="@color/hufs"
                        app:background="@drawable/specup"
                        android:onClick="employmentCommunity2_go"/>
                    <Button
                        android:id="@+id/employmentCommunity3Go"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:text="독취사"
                        android:textColor="@color/yellow"
                        app:backgroundTint="@color/hufs"
                        app:background="@drawable/dokchi"
                        android:onClick="employmentCommunity3_go"/>
                    <TextView
                        android:id="@+id/employmentCommunity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nanumgodic"
                        android:text=" => 취업 정보 커뮤니티"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tab_spec"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/specSite1Go"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:text="linkareer"
                        android:textColor="@color/yellow"
                        app:backgroundTint="@color/hufs"
                        app:background="@drawable/linkareer"
                        android:onClick="specInfoSite1_go"/>
                    <Button
                        android:id="@+id/specSite2Go"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:text="campuspick"
                        android:textColor="@color/yellow"
                        app:backgroundTint="@color/hufs"
                        app:background="@drawable/campuspick"
                        android:onClick="specInfoSite2_go"/>
                    <Button
                        android:id="@+id/specSite3Go"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:text="wevity"
                        android:textColor="@color/yellow"
                        app:backgroundTint="@color/hufs"
                        app:background="@drawable/wevity"
                        android:onClick="specInfoSite3_go"/>
                    <TextView
                        android:id="@+id/specSite"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nanumgodic"
                        android:text=" => 공모전과 대외활동으로 쌓는 스펙"/>

                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </TabHost>
</androidx.constraintlayout.widget.ConstraintLayout>